# PISAD Environment Configuration Template
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=PISAD
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8080

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# SDR Configuration
SDR_FREQUENCY=433920000
SDR_SAMPLE_RATE=2000000
SDR_GAIN=30
SDR_DEVICE_INDEX=0
SDR_DEVICE_ARGS=""

# MAVLink Configuration
MAV_CONNECTION_STRING=udp:127.0.0.1:14550
MAV_SOURCE_SYSTEM=1
MAV_TARGET_SYSTEM=1
MAV_BAUD_RATE=57600

# Safety Configuration
SAFETY_GEOFENCE_RADIUS=500
SAFETY_MIN_BATTERY=20
SAFETY_RTL_ALTITUDE=50
SAFETY_MAX_VELOCITY=10

# Database
DATABASE_URL=sqlite:///./pisad.db

# Development Settings
DEV_HOT_RELOAD=false
DEV_DEBUG_MODE=false

# Field Test Configuration
FIELD_TEST_DURATION=300
FIELD_TEST_SAMPLE_INTERVAL=1

# Performance Settings
WORKER_COUNT=4
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Prometheus Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Feature Flags
ENABLE_SIMULATOR=false
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_API=false

# Hardware Specific (Raspberry Pi 5)
GPIO_PINS_LED_STATUS=17
GPIO_PINS_LED_SIGNAL=27
GPIO_PINS_BUTTON_ARM=22
